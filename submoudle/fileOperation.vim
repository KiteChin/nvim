"for file operation
nnoremap <LEADER>s :w<CR>
nnoremap <LEADER>q :q<CR>
"reload the config of nvim
noremap <leader>R :source $MYVIMRC<CR>
"hotkey for open frequent file
noremap <LEADER>rc :e ~/.config/nvim/init.vim<CR>
noremap <LEADER>ri :e ~/.config/i3/config<CR>
noremap <LEADER>rr :e ~/.config/ranger/rc.conf<CR>
noremap <LEADER>ra :e ~/.config/alacritty/alacritty.yml<CR>
noremap <LEADER>rz :e $HOME/.zshrc<CR>

